  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/startup.sh"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "auto",
        "hooks": [
          {
            "type": "command",
            "command": "echo {\"systemMessage\": \"COMPACT INSTRUCTIONS: Preserve all work-in-progress context including: (1) file paths and line numbers for modified/relevant files, (2) decisions made and their rationale, (3) remaining tasks with dependencies, (4) key error messages and test results, (5) architectural understanding gained. Maintain sufficient context for intelligent continuation of implementation work.\"}"
          }
        ]
      },
      {
        "matcher": "manual",
        "hooks": [
          {
            "type": "command",
            "command": "echo {\"systemMessage\": \"COMPACT INSTRUCTIONS: Preserve all work-in-progress context including: (1) file paths and line numbers for modified/relevant files, (2) decisions made and their rationale, (3) remaining tasks with dependencies, (4) key error messages and test results, (5) architectural understanding gained. Maintain sufficient context for intelligent continuation of implementation work.\"}"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/session-tracker.py"
          },
          {
            "type": "command",
            "command": "python .claude/hooks/state-sync.py"
          },
          {
            "type": "command",
            "command": "python .claude/hooks/registry-staleness.py"
          }
        ]
      },
      {
        "matcher": "TodoWrite",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/todo-context-sync.py"
          }
        ]
      }
    ]
  },
  "enabledMcpjsonServers": [
    "filesystem",
    "github"
  ]
}
